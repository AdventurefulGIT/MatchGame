@inherits LayoutComponentBase

@inject User UserService
<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            @if (UserService.Username != null)
            {
                <span>Hello @UserService.Username</span>
            }
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

